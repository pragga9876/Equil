<% pageCSS = ["Airefy"]; %>
<div class="scene" aria-hidden="true"></div>

<!-- Background SVG -->
<svg class="bg-paths" role="img" aria-label="Decorative background paths">
  <title>Decorative background lines</title>
  <desc>Subtle technical wireframe lines moving slowly behind content.</desc>
  <defs>
    <linearGradient id="g1" x1="0" y1="0" x2="1" y2="1">
      <stop offset="0%" stop-color="#7bd1ff" stop-opacity="0.85" />
      <stop offset="100%" stop-color="#9b87f5" stop-opacity="0.85" />
    </linearGradient>
  </defs>
  <g>
    <path d="M0,40 C120,90 240,10 360,60 S600,120 980,40" />
    <path d="M0,120 C160,180 280,60 420,120 S720,200 980,120" />
    <path d="M0,220 C100,300 280,200 440,260 S760,340 980,260" />
    <path d="M0,340 C200,380 360,320 540,360 S820,420 980,380" />
    <path d="M0,440 C140,500 320,420 520,460 S820,520 980,500" />
    <path d="M0,540 C120,600 300,520 500,560 S820,620 980,600" />
    <path d="M0,640 C160,700 340,620 540,660 S840,720 980,700" />
    <path d="M0,740 C180,780 360,720 560,760 S860,820 980,800" />
    <path d="M0,840 C200,880 380,820 580,860 S880,920 980,900" />
  </g>
</svg>

<div class="wrap">
  <!-- HEADER -->
  <header class="appbar">
    <div class="brand">
      <svg aria-hidden="true" width="28" height="28" viewBox="0 0 24 24" fill="none" role="img">
        <title>Airefy logo</title>
        <rect x="2" y="2" width="20" height="20" rx="5" stroke="currentColor" opacity=".35" />
        <path d="M7 20 L13 7" stroke="currentColor" stroke-width="1.8" stroke-linejoin="round" />
        <path d="M17 17 L13 7" stroke="currentColor" stroke-width="1.8" stroke-linejoin="round" />
        <path d="M11 12.8 H15" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" />
      </svg>
      <span>Airefy</span>
    </div>

    <div class="controls">
      <button id="themeBtn" class="btn theme-toggle">
        <svg class="sun" width="18" height="18" fill="none">
          <circle cx="12" cy="12" r="4" stroke="currentColor" />
        </svg>
        <svg class="moon" width="18" height="18" fill="none">
          <path d="M20 14.5A8.5 8.5 0 1 1 9.5 4a7 7 0 1 0 10.5 10.5Z" stroke="currentColor" />
        </svg>
      </button>
      <button id="resetBtn" class="btn">Reset</button>
    </div>
  </header>

  <!-- SEARCH CARD -->
  <section class="card search">
    <div class="input-wrap">
      <svg class="icon-search" width="18" height="18" fill="none">
        <circle cx="11" cy="11" r="7" stroke="currentColor" stroke-width="1.5" />
        <path d="M20 20l-3.2-3.2" stroke="currentColor" stroke-width="1.5" />
      </svg>
      <input id="searchInput" type="search"
        placeholder="Search: India, Kolkata, Tripura, Mumbai..."
        autocomplete="off" />
      <button id="searchBtn" class="btn mobile-search">Search</button>
    </div>
  </section>

  <!-- MAIN GRID -->
  <main class="grid">
    <!-- AQI PANEL -->
    <section class="card panel proximity-glow">
      <div class="headline">
        <h1 id="h-current" class="place">—</h1>
        <div id="updated">—</div>
      </div>

      <div class="aqi">
        <div class="chip" id="aqiChip">AQI —</div>
        <div>
          <div>PM2.5: <strong id="pm25">—</strong> µg/m³</div>

          <div class="bars">
            <div class="bar" id="barPlace"><span></span></div>
            <div class="bar" id="barGood"><span></span></div>
          </div>

          <div class="compareRow">
            <span id="compareText">Comparing with:</span>
            <select id="compareSelect" class="btn">
              <option value="baseline">Very Good (PM2.5 12)</option>
            </select>
          </div>
        </div>
      </div>

      <p class="note">Why this might differ: provider differences, coverage, averaging windows, methods, etc.</p>
    </section>

    <!-- POLLUTANT BREAKDOWN -->
    <section class="card panel proximity-glow">
      <h2>Pollutant breakdown</h2>
      <div id="breakdown">
        <p>PM2.5: <span id="b_pm25"></span></p>
        <p>PM10: <span id="b_pm10"></span></p>
        <p>NO₂: <span id="b_no2"></span></p>
        <p>SO₂: <span id="b_so2"></span></p>
        <p>O₃: <span id="b_o3"></span></p>
        <p>CO: <span id="b_co"></span></p>
      </div>

      <div id="bdBar" class="bd-bar"></div>
      <div id="bdLegend" class="bd-legend"></div>
    </section>

    <!-- HEALTH RECOMMENDATIONS -->
    <aside class="card panel proximity-glow">
      <h2>Health recommendations</h2>
      <p id="healthIntro" style="color:var(--muted)">Select a location to view recommendations.</p>
      <ul id="recs">
        <li>Search a supported location to see recommendations.</li>
      </ul>
    </aside>
  </main>
</div>

<div class="glow" id="glow"></div>

<script src="/js/Airefy.js"></script>



<script>
  // SEARCH BUTTON HANDLER
  const searchBtn = document.getElementById('searchBtn');
  const searchInput = document.getElementById('searchInput');

  searchBtn.addEventListener('click', () => {
    const event = new Event('input', { bubbles: true });
    searchInput.dispatchEvent(event);
  });
</script>
