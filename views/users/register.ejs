
<% pageCSS = ["auth"]; %>
<div class="auth-page">
  <div class="signup-container">
        <div class="header">
            <a href="/login"><span class="back-arrow" ><i class="fas fa-arrow-left"></i></span></a>
            <!-- <span class="screen-title">Equil Sign Up Screen</span> -->
        </div>

        <div class="content">
            <h1 class="main-title">Join the Green Revolution</h1>
            <p class="subtitle">Create your account to start making an impact.</p>

            <form class="signup-form" action="/register" method="POST">
                <label for="username">username</label>
                <input type="text" id="username" name="username" placeholder="Enter your username" required>
                  
                

                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your email address" required>

                <label for="password">Password</label>
                <div class="password-input-group">
                    <input type="password" id="password" name="password" placeholder="Create a password" required>
                    <span class="password-toggle"><i class="fas fa-eye-slash"></i></span>
                </div>
                <p class="password-hint">Must be at least 8 characters</p>

                <button type="submit" class="create-account-btn">Create Account</button>
            </form>

            <p class="terms-text">
                By signing up, you agree to our 
                <a href="#" class="privacy-link">Privacy Policy</a> 
                and 
                <a href="#" class="terms-link">Terms of Service</a>.
            </p>

            <p class="signin-prompt">
                Already have an account? <a href="/login" class="signin-link">Sign In</a>
            </p>
        </div>
    </div>
</div>